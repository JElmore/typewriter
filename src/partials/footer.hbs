<footer class="site-footer">
  <div class="row">

    <div class="column medium-6 large-6">
      <section class="font-tiny">
        &copy; {{date format="YYYY"}} <a href="{{@site.url}}">{{@site.title}}</a> -
        Powered by <a href="https://ghost.org">Ghost</a>
      </section>
    </div>

    <div class="column medium-6 large-6">
      <section>
        <ul class="social-nav">
        {{#if @blog.twitter}}
          <li>
            <a href="{{twitter_url}}" target="_blank">
              <icon name="ei-sc-twitter" size="s" />
            </a>
          </li>
        {{/if}}
        {{#if @blog.facebook}}
          <li>
            <a href="{{facebook_url}}" target="_blank">
              <icon name="ei-sc-facebook" size="s" />
            </a>
          </li>
        {{/if}}
        {{#if @blog.mastodon}}
          <li>
            <a href="{{mastodon_url}}" target="_blank">
              <icon name="ei-link" size="s" />
            </a>
          </li>
        {{/if}}

        </ul>
      </section>
    </div>

  </div>
</footer>
